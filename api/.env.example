# Server
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# Database Mode: 'local' for SQLite or 'remote' for Supabase PostgreSQL
DB_MODE=local

# Database (only used when DB_MODE=remote)
# For local SQLite, the database is stored in api/prisma/dev.db
DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres

# Redis
REDIS_URL=redis://localhost:6379

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-your-key

# OpenAI
OPENAI_API_KEY=sk-proj-your-key

# Tavily (Web Research)
TAVILY_API_KEY=tvly-your-key

# Google Custom Search
GOOGLE_API_KEY=AIza-your-key
GOOGLE_CX=your-search-engine-id

# Stripe
STRIPE_SECRET_KEY=sk_test_your-key
STRIPE_WEBHOOK_SECRET=whsec_your-key
STRIPE_PRO_PRICE_ID=price_your-price-id

# Affiliate
AMAZON_AFFILIATE_TAG=shopii-20

# CORS (for extension)
CORS_ORIGIN=chrome-extension://*
