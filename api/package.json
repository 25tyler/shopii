{
  "name": "shopii-api",
  "version": "0.1.0",
  "description": "Shopii API Service - AI-Powered Shopping Assistant",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.dev.ts",
    "dev:full": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:push:dev": "prisma db push --schema=prisma/schema.dev.prisma",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "setup": "npm run db:push:dev && npm run db:seed",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "prisma": {
    "schema": "prisma/schema.dev.prisma"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/rate-limit": "^10.2.0",
    "@fastify/swagger": "^9.2.0",
    "@fastify/swagger-ui": "^5.1.0",
    "@prisma/client": "^5.22.0",
    "@supabase/supabase-js": "^2.46.1",
    "dotenv": "^17.2.3",
    "fastify": "^5.1.0",
    "ioredis": "^5.4.1",
    "openai": "^6.16.0",
    "stripe": "^17.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "pino-pretty": "^11.2.2",
    "prisma": "^5.22.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
